        "2": {
            "titulo": "Primera Persona",
            "descripcion": "Se refiere a quien habla (yo, nosotros) o al grupo al que pertenece el hablante.",
            "imagenLeccion": "/img/niveles/lenguaje/primera_persona.png",
            "ejemplos": [
                "Ejemplo 1: Yo estudio.",
                "Ejemplo 2: Nosotros caminamos."
            ]
        },
        "3": {
            "titulo": "Segunda Persona",
            "descripcion": "Se refiere a quien escucha o recibe la acción (tú, ustedes).",
            "imagenLeccion": "/img/niveles/lenguaje/segunda_persona.png",
            "ejemplos": [
                "Ejemplo 1: Tú lees un libro.",
                "Ejemplo 2: Ustedes juegan al fútbol."
            ]
        },
        "4": {
            "titulo": "Tercera Persona",
            "descripcion": "Se refiere a quien no participa directamente en la conversación (él, ella, ellos).",
            "imagenLeccion": "/img/niveles/lenguaje/tercera_persona.png",
            "ejemplos": [
                "Ejemplo 1: Él corre.",
                "Ejemplo 2: Ellas cantan."
            ]
        },
        "5": {
            "titulo": "Pronombres: Género y Número",
            "descripcion": "Concuerdan en género (masculino o femenino) y número (singular o plural) con el sustantivo que reemplazan.",
            "imagenLeccion": "/img/niveles/lenguaje/genero_numero_pronombres.png",
            "ejemplos": [
                "Ejemplo 1: Él (masculino), ella (femenino).",
                "Ejemplo 2: Nosotros (plural), yo (singular)."
            ]
        }
    }
